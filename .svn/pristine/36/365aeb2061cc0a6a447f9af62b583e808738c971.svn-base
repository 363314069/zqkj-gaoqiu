a.map {
	background: #069CD8 url('../img/icon_map@3x.png') center center no-repeat;
	background-size: 30px 30px;
	display: block;
	width: 45px;
	height: 45px;
}
.time-choice{
	background-color: #18B4ED;height:45px;text-align: center;padding:2px;
}
.time-choice .item{
	width:47%;height:40px;line-height:40px; background-color: white;display: inline-block;border-radius:2px;text-align: left;
}
.time-choice .item i{
	float: right;line-height: 40px;font-size: 20px;color:#E0E0E0;
}
.time-choice .date-item .date{
	display: inline-block;color: #55C0EA;
	margin-left:13px;
}
.time-choice .date-item .week{
	display: inline-block;color: #666666;margin-left:5px;font-size: 12px;
}

.time-choice .time-item  .time{
	margin-left:13px;
	display: inline-block;color: #55C0EA;
}
.nav{
	width: 100%;
	height: 45px;
	background-color: white;
	border-bottom: 1px solid #E6E6E6;
	text-align: center;
}
.nav .item{
	display: inline-block;
	width:30%;
	line-height: 45px;
	overflow: hidden;
}
.nav .item span{
	display:inline-block;
	height:45px;
	line-height:45px;
}
.nav .item.active span{
	color:#55C0EA;
	border-bottom: 4px solid #55C0EA;
}
.course-list{background-color: white;padding: 0 13px;}
.course-list .item{
	position:relative;
}
.course-list .item:not(:last-child)::after {
	position: absolute;
	right: 0;
	bottom: 0;
	left: 0px;
	height: 1px;
	margin-left: 13px;
	content: '';
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
	background-color: #E6E6E6;
}
.course-list .item .item-left{
	position:absolute;
	width:80px;
	height:100%;
	text-align: center;
}
.course-list .item .item-left img{
	width: 70px; height:70px;border-radius:50px;border: 1px solid #e6e6e6;margin: auto;position: absolute;top: 0; left: 0; bottom: 0; right: 0;
}
.course-list .item .item-right{
	position:absolute;
	right:0;
	width:80px;
	height:100%;
	text-align: center;
}
.course-list .item .item-right .price-show{
	position:absolute;left: 50%;top: 60%;width:80px;height:60px;margin-left:-40px;margin-top:-30px;text-align: right;
}
.course-list .item .item-right .price-show .selling-price{
	text-align:center;
	color: #FF6D00;
	font-size: 14px;
}
.course-list .item .item-right .price-show .give-yb{
	color: #FF6D00;
	border-radius:2px;
	padding:2px;
	border:1px solid #FF6D00;
	font-size: 12px;
}
.course-list .item .item-center{
	margin:0 0 0 90px;
	padding:13px 0;
}
.course-list .item .item-center .i-name{
	line-height:25px;
	font-size: 16px;
}
.course-list .item .item-center .i-type,.i-distance{
	line-height:25px;
	font-size: 14px;
	color: #666666;
}