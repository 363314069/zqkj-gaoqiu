//加载关闭时间段的数据
function queryTeatimeList(date) {
    $.ajax({
        type:"POST",
        url: T.serverurl + "/business/teatime/list",
        data:{date:date,type:2,introductionGuid:introductionGuid},
        async:false,
        success: function(r) {
            if(r.code == 0){
                teaArr = new Array();
                $.each(r.data,function (teaInt, teaObj) {
                    teaArr.push(teaObj.time);
                });
            }
        }
    })
}

