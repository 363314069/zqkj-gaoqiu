<script type="text/javascript">

    footer.hide();//关闭下面导航

    //弹出层   start
    var w,h;
    function getSrceenWH(){
        w = $(window).width();
        h = $(window).height();
        $('#dialogBg').width(w).height(h);
    }
    window.onresize = function(){
        getSrceenWH();
    };
    $(window).resize();
    //弹出层   end

    $(document).ready(function(){
        $(".more").click(function(){
            $(".all_text").toggle();
        });

        //弹出层   start
        getSrceenWH();

        //关闭弹窗
        $('.claseDialogBtn').click(function(){
            $('#dialogBg').hide();
            $('#dialog').hide();
        });
        //弹出层   end
    });


    $(".add").click(function(){
        var num = parseInt($(this).siblings('.num').val());
        var price = parseFloat($(".price").find('span').data('price'));
        if(!isNull(buyNumber) || buyNumber == 0){
            var sum = parseInt(num+1);
            $(this).siblings('.num').val(sum);
            var all = parseFloat(sum *price);
            $('.price').find('span').text(all)
        }else {
            if (num < buyNumber) {
                var sum = parseInt(num + 1);
                $(this).siblings('.num').val(sum);
                var all = parseFloat(sum * price);
                $('.price').find('span').text(all)
            } else {
                alert("该商品限购" + buyNumber + "个");
            }
        }
    })
    $(".jian").click(function(){
        var num = parseInt($(this).siblings('.num').val());
        var price = parseFloat($('.price').find('span').data('price'));
        if(num >1){
            var sum = parseInt(num-1);
            $(this).siblings('.num').val(sum);
            var all = parseFloat(sum *price);
            $('.price').find('span').text(all)
        }else{
            alert('数量不能小于1个')
        }
    })
</script>
